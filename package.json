{
    "name": "next-js-boilerplate",
    "version": "1.3.4",
    "description": "An advanced and entirely pre-configured Next.js & BiomeJS boilerplate.",
    "author": "Cybearl <contact@cybearl.com> (https://www.cybearl.com/)",
    "license": "MIT",
    "private": true,
    "packageManager": "yarn@1.22.22",
    "homepage": "https://github.com/cybearl/next-js-boilerplate",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cybearl/next-js-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/cybearl/next-js-boilerplate/issues"
    },
    "scripts": {
        "v-bump": "yarn version --patch",
        "knip": "knip",
        "lint": "biome format --write . && biome lint . && next lint",
        "lint:fix": "next lint --fix && biome lint . --apply && biome format --write .",
        "test": "echo 'Unit testing is not configured for now, skipping..'",
        "dev": "dotenv -- next dev",
        "build": "next build",
        "start": "dotenv -- next start"
    },
    "dependencies": {
        "@cybearl/cypack": "^1.8.10",
        "@tailwindcss/postcss": "^4.1.11",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lodash.throttle": "^4.1.1",
        "next": "^14.2.30",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sharp": "^0.34.3",
        "swr": "^2.3.4",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11",
        "use-debounce": "^10.0.5"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@iconify/react": "^5.2.1",
        "@types/lodash.throttle": "^4.1.9",
        "@types/node": "^24.0.13",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "dotenv-cli": "^8.0.0",
        "eslint": "^8.57.1",
        "eslint-config-next": "^15.3.5",
        "knip": "^5.61.3",
        "postcss": "^8.5.6",
        "tsconfig-paths": "^4.2.0",
        "tw-animate-css": "^1.3.5",
        "typescript": "^5.8.3"
    }
