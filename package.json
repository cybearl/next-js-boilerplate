{
    "name": "next-js-boilerplate",
    "version": "2025.2.2",
    "description": "An advanced and entirely pre-configured Next.js & BiomeJS boilerplate.",
    "author": "Cybearl <contact@cybearl.com> (https://www.cybearl.com/)",
    "license": "MIT",
    "private": true,
    "homepage": "https://github.com/cybearl/next-js-boilerplate",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cybearl/next-js-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/cybearl/next-js-boilerplate/issues"
    },
    "scripts": {
        "setup-npmrc": "node scripts/setup-npmrc.js",
        "v-bump": "yarn version --patch",
        "dev": "dotenv -- next dev",
        "build": "next build",
        "start": "dotenv -- next start",
        "test": "echo 'Unit testing is not configured for now, skipping..'",
        "lint": "biome format --write . && biome lint . && next lint",
        "lint:fix": "next lint --fix && biome lint . --apply && biome format --write .",
        "knip": "knip"
    },
    "dependencies": {
        "@cybearl/cypack": "^2025.2.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "next": "^14.2.24",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sharp": "^0.33.5",
        "swr": "^2.3.2",
        "tailwind-merge": "^3.0.1",
        "tailwindcss": "^3.4.17",
        "tailwindcss-animate": "^1.0.7",
        "use-debounce": "^10.0.4"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@iconify/react": "^5.2.0",
        "@types/node": "^22.13.1",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "autoprefixer": "^10.4.20",
        "dotenv-cli": "^8.0.0",
        "eslint": "^8.57.1",
        "eslint-config-next": "^15.1.7",
        "knip": "^5.44.1",
        "postcss": "^8.5.2",
        "tailwindcss-textshadow": "^2.1.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "resolutions": {
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5"
    }
}